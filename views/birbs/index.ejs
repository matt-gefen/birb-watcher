<%- include('../partials/html-head') %>
<link 
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" 
  rel="stylesheet" 
  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" 
  crossorigin="anonymous"
>
<%- include('../partials/search') %>
<%- include('../partials/nav') %>

<main>

  <div class= 'main-title-container'>
    <h1 class='title'>BirbSearch!</h1>
    <p class='page-intro'>Learn More About Birbs</p>
  </div>
  <a class='egg' href="https://www.youtube.com/watch?v=ml7bK1jg69I"><i class="fas fa-crow fa-8x"></i></a>
  <h2 id='which-birb'>Which Birb?</h2>
  <form class='add-sighting-form' action="/birbs" method="post">
    <select class="js-example-basic-single" name='bird'>
      <% usSpecies.forEach((species) => { %> 
        <option value="<%=species.speciesCode%>"><%=species.comName%></option>
      <% }) %> 
    </select><br>
    <button class='submit-button' type="submit">View Bird Details</button>
  </form>

</main>

