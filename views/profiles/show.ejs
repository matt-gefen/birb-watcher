>
<%- include('../partials/nav') %>

<main>
  <% if (isSelf) { %>
    <h1 class='title'>Your Sightings</h1>
  <% } else { %>
  <h1><%= profile.name%>'s Sightings</h1>
  <% } %> 
  <% if (isSelf) { %>
    <h2>Add Sighting</h2>
    <form id='add-sighting-form' action="/profiles/<%=profile._id%>" method='POST'>
      <label>
        Date:
        <input type="date" name='date'>
      </label><br>
      <label>
        City:
        <input type="text" name='city'>
      </label><br>
      <label>
        State:
        <select name="state">
          <% states.forEach((state) => { %> 
            <option value="<%=state%>"><%=state%></option>
          <% }) %> 
        </select>
      </label><br>
      <label>
        Notes: <br>
        <textarea name="notes" placeholder="Anything Notable?"></textarea>
      </label><br>
      <label>
        Bird Species:
        <select class="js-example-basic-single" name='bird'>
          <% usSpecies.forEach((species) => { %> 
            <option value="<%=species.speciesCode%>"><%=species.comName%></option>
          <% }) %> 
        </select>
      </label><br>
      <button>Add Sighting</button>
    </form>
  <% } %>

<h2 id='sightings-h2'>Sightings</h2>
<% profile.sightings.sort((a,b) => {return b.date - a.date}) %>
<% profile.sightings.forEach(sighting => { %>
  <div class="card text-center">
    <div id='sighting-header' class="card-header">
      <form id='sighting-delete' action='/profiles/<%=profile._id%>/<%=sighting._id%>?_method=DELETE' method='post'>
        <button type="submit">X</button>
      </form>
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= sighting.city %>, <%= sighting.state %> </h5>
      <p class="card-text">
        <% sighting.birds.forEach(bird => { %>
          <%=bird.commonName%><br>
        <% }) %> 
        </ul>
      </p>
      <a href="/profiles/<%=profile._id%>/<%=sighting._id%>" class="btn btn-primary">Details</a>
    </div>
    <div class="card-footer text-muted">
      <%= sighting.date.getUTCMonth() + 1%>/<%= sighting.date.getUTCDate() %>/<%= sighting.date.getUTCFullYear() %>
    </div>
  </div>
<% }) %> 
</main>

<%- include('../partials/footer') %>